<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Rectangle jaune en haut -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFCF00" /> <!-- Jaune avec 100% d'opacité -->
        </shape>
    </item>

    <!-- Fond blanc en dessous -->
    <item android:top="200dp"> <!-- Ajustez la hauteur du rectangle jaune ici -->
        <shape android:shape="rectangle">
            <solid android:color="#E8E6E3 " /> <!-- Blanc -->
            <!-- #EFEFEF (gris très clair) #FFFFFF (Blanc pour contraste)
             #FFCF00 (Jaune principal) -->

        </shape>
    </item>

</layer-list>