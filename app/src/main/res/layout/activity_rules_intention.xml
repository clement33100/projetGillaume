<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background"
    tools:context=".Rules">

    <TextView
        android:id="@+id/txt_descstep4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Choisis la durée de \n ton fichier audio"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/txt_step4"
        app:layout_constraintTop_toBottomOf="@+id/txt_descstep3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_descstep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Choisis une voix off"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/txt_step1"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_descstep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Écris tes intentions"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/txt_step2"
        app:layout_constraintTop_toBottomOf="@+id/txt_descstep1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_descstep3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Choisis ta musique\n de fond"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/txt_step3"
        app:layout_constraintTop_toBottomOf="@+id/txt_descstep2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_descstep5"
        android:layout_width="279dp"
        android:layout_height="107dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Télécharge tes Intentions à écouter chaque jour"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/txt_step5"
        app:layout_constraintTop_toBottomOf="@+id/txt_descstep4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Étape 3 :"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_descstep3" />

    <TextView
        android:id="@+id/txt_step5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Étape 5 :"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_descstep5" />

    <TextView
        android:id="@+id/txt_step4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Étape 4 :"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_descstep4" />

    <TextView
        android:id="@+id/txt_step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Étape 2 :"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_descstep2" />

    <TextView
        android:id="@+id/title"
        android:layout_width="329dp"
        android:layout_height="115dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Crée Tes Nouvelles Intentions"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Étape 1 :"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_descstep1" />

    <Button
        android:id="@+id/btn_start_intention"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:text="C'est Partie!"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_descstep5" />

</androidx.constraintlayout.widget.ConstraintLayout>