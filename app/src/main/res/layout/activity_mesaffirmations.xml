<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background"
    tools:context=".mesAffirmations"
    >



    <!-- Contenu principal de l'activité -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Bouton Menu Burger en haut à gauche -->

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="264dp"
            android:layout_height="77dp"
            android:layout_marginTop="36dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/txt_appliname" />
        <!-- Titre de l'activité -->

        <!-- Description -->

        <!-- Bouton Créer Nouveau -->
        <TextView
            android:id="@+id/textviewDiamant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:autoLink="none"
            android:gravity="center"
            android:linksClickable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/diamant"
            android:textColorLink="@android:color/holo_blue_light"
            android:textSize="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_advicesaffirmations" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:autoLink="none"
            android:gravity="center"
            android:linksClickable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/lien_texte"
            android:textColorLink="@android:color/holo_blue_light"
            android:textSize="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textviewDiamant"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btn_new"
            android:layout_width="316dp"
            android:layout_height="74dp"
            android:layout_marginTop="110dp"
            android:backgroundTint="@color/green"
            android:text="@string/btn_create_new"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <!-- Bouton Mes Affirmations -->
        <Button
            android:id="@+id/btn_affirmation"
            android:layout_width="316dp"
            android:layout_height="74dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/green"
            android:text="@string/btn_my_affirmations"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_new" />

        <!-- Bouton Comment ça Marche ? -->
        <Button
            android:id="@+id/btn_howitworks"
            android:layout_width="316dp"
            android:layout_height="74dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/green"
            android:text="@string/btn_how_it_works"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_affirmation" />

        <!-- Bouton Conseils Pratiques -->
        <Button
            android:id="@+id/btn_advicesaffirmations"
            android:layout_width="316dp"
            android:layout_height="74dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/green"
            android:text="@string/btn_practical_advices"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_howitworks" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Français  | "
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView7"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English  | "
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Español"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView7"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.drawerlayout.widget.DrawerLayout>
