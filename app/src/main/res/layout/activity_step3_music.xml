<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_background"
        tools:context=".step3Music">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="CHOISIS TA \n MUSIQUE"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="27sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="350dp"
            android:layout_height="135dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollViewEpic">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/uploadButton"
                    android:layout_width="316dp"
                    android:layout_height="74dp"
                    android:backgroundTint="@color/green"
                    android:text="Upload MP3"
                    android:textSize="24dp" />

                <LinearLayout
                    android:id="@+id/dynamicButtonContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_frequence"
            android:layout_width="316dp"
            android:layout_height="74dp"
            android:layout_marginTop="77dp"
            android:backgroundTint="@color/green"
            android:text="Fréquence vibratoire"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ScrollView
            android:id="@+id/scrollViewFrequenceVibratoire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_frequence">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Add your additional options here -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/frequence1"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="@color/yellow"
                        android:padding="10dp"
                        android:textColor="@color/grey"
                        android:textSize="19dp"
                        android:text="Abondance" />

                    <ImageButton
                        android:id="@+id/listenfrequence1"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="listen femme"
                        app:srcCompat="@drawable/listengrey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/frequence2"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="0dp"
                        android:backgroundTint="@color/yellow"
                        android:padding="10dp"
                        android:textColor="@color/grey"
                        android:textSize="19dp"
                        android:text="     Focus     " />

                    <ImageButton
                        android:id="@+id/listenfrequence2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="listen femme"
                        app:srcCompat="@drawable/listengrey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/frequence3"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="@color/yellow"
                        android:padding="10dp"
                        android:textColor="@color/grey"
                        android:textSize="19dp"
                        android:text="   Intuition   " />

                    <ImageButton
                        android:id="@+id/listenfrequence3"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="listen femme"
                        app:srcCompat="@drawable/listengrey" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/scrollViewEpic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_epic">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/epic1"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="@color/yellow"
                        android:padding="10dp"
                        android:textColor="@color/grey"
                        android:textSize="19dp"
                        android:text="Puissance intérieur" />

                    <ImageButton
                        android:id="@+id/listenepic1"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="listen femme"
                        app:srcCompat="@drawable/listengrey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/epic2"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="00dp"
                        android:backgroundTint="@color/yellow"
                        android:padding="10dp"
                        android:textColor="@color/grey"
                        android:textSize="19dp"
                        android:text="     Renaissance       " />

                    <ImageButton
                        android:id="@+id/listenepic2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="listen femme"
                        app:srcCompat="@drawable/listengrey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/epic3"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="@color/yellow"
                        android:padding="10dp"
                        android:textColor="@color/grey"
                        android:textSize="19dp"
                        android:text="  Ressource infinie  " />

                    <ImageButton
                        android:id="@+id/listenepic3"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="listen femme"
                        app:srcCompat="@drawable/listengrey" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_epic"
            android:layout_width="316dp"
            android:layout_height="74dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green"
            android:text="Epic"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollViewFrequenceVibratoire" />


        <Button
            android:id="@+id/btn_okmusic"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:text="ok"
            android:textSize="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="clic sur la musique \n de ton choix"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/scrollView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:text="Ton choix :"
            android:textColor="@color/grey"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>