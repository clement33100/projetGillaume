<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background"
    tools:context=".Rules">

    <!-- Contenu principal enveloppé dans un ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Rules">


            <!-- Bouton Menu Burger en haut à gauche -->
            <ImageButton
                android:id="@+id/btn_burger"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:contentDescription="@string/menu"
                android:scaleType="fitCenter"
                android:src="@drawable/menu_3_points"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Titre de l'activité -->

            <!-- Description de l'application -->
            <TextView
                android:id="@+id/title"
                android:layout_width="257dp"
                android:layout_height="72dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:gravity="center"
                android:text="Crée Tes Nouvelles Affirmations"
                android:textSize="27sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_descstep2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="128dp"
                android:text="@string/txt_rules1"
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@+id/txt_step2"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_descstep3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/txt_rules2"
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@+id/txt_step3"
                app:layout_constraintTop_toBottomOf="@+id/txt_descstep2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_descstep4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/txt_rules3"
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@+id/txt_step4"
                app:layout_constraintTop_toBottomOf="@+id/txt_descstep3"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_descstep5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/txt_rules4"
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@+id/txt_step5"
                app:layout_constraintTop_toBottomOf="@+id/txt_descstep4"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_descstep6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/txt_rules5"
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@+id/txt_step6"
                app:layout_constraintTop_toBottomOf="@+id/txt_descstep5"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Étape 1 :"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_descstep2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_descstep2" />

            <TextView
                android:id="@+id/txt_step3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Étape 2 :"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_descstep3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_descstep3" />

            <TextView
                android:id="@+id/txt_step4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Étape 3 :"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_descstep4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_descstep4" />

            <TextView
                android:id="@+id/txt_step5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Étape 4:"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_descstep5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_descstep5" />

            <TextView
                android:id="@+id/txt_step6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Étape 5:"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_descstep6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_descstep6" />

            <!-- Bouton "C'est Parti!" -->
            <Button
                android:id="@+id/btn_start"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                android:text="C'est Parti !"
                android:textSize="19dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_descstep6" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Menu de navigation latéral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
