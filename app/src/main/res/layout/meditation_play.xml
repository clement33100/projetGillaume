<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background"
    tools:context=".MeditationPlay">

    <!-- Contenu principal de l'activité -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_burger"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@null"
            android:contentDescription="@string/menu"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_3_points"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- Texte principal -->
        <TextView
            android:id="@+id/txt_meditation"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="C'EST PRÊT !"
            android:textColor="@color/grey"
            android:textSize="27sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Image principale -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="254dp"
            android:layout_height="233dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_meditation"
            app:srcCompat="@drawable/logoappligrey" />

        <!-- Layout principal contenant les éléments UI -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="317dp"
            android:layout_height="56dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="192dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- ProgressBar linéaire existante -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scaleY="2"
                android:layout_margin="16dp"
                android:indeterminateOnly="false"
                android:max="100"
                android:progress="0"
                android:progressBackgroundTint="@color/light_green"
                android:progressTint="@color/green" />

            <!-- Bouton pause -->
            <ImageButton
                android:id="@+id/imageButtonPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="36dp"
                android:background="#EFEFEF"
                android:src="@drawable/imgunpause"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.533"
                tools:srcCompat="@drawable/imgpause" />

        </LinearLayout>

        <!-- EditText pour le nom de l'affirmation -->
        <EditText
            android:id="@+id/nameAffirm"
            android:layout_width="316dp"
            android:layout_height="74dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/plaintext_white"
            android:backgroundTint="@color/yellow"
            android:ems="10"
            android:hint="Donne un nom à ta création"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textColorLink="@color/grey"
            android:textSize="24sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/buttonOkMeditation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <!-- Bouton OK -->
        <Button
            android:id="@+id/buttonOkMeditation"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:text="ok"
            android:textSize="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Texte de félicitations -->
        <TextView
            android:id="@+id/tv_felicitation"
            android:layout_width="351dp"
            android:layout_height="69dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Félicitations ! Tu peux maintenant écouter ta création. Bonne écoute ! "
            android:textSize="19sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Overlay pour le téléchargement avec indicateur circulaire -->
        <FrameLayout
            android:id="@+id/circularProgressContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/circularProgressIndicator"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    app:indicatorColor="@color/green"
                    app:indicatorSize="300dp"
                    app:strokeWidth="20dp"
                    app:trackColor="#40FFFFFF" />

                <TextView
                    android:id="@+id/circularProgressText"
                    android:layout_width="131dp"
                    android:layout_height="66dp"
                    android:layout_marginTop="-180dp"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="Progression de l'audio : 0 pour cent"
                    android:text="0%"
                    android:textColor="@color/green"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menu de navigation latéral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
