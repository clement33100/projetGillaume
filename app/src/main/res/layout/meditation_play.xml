<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="@drawable/activity_background"
    tools:context=".MeditationPlay"
    android:clipToPadding="false">

    <!-- CONTENU avec padding conservé -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- Contenu principal de l'activité -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@drawable/activity_background"
            android:padding="16dp"
            android:clipToPadding="false">

            <ImageButton
                android:id="@+id/btn_burger"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:contentDescription="@string/menu"
                android:scaleType="fitCenter"
                android:src="@drawable/menu_3_pointssvg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Texte principal -->
            <TextView
                android:id="@+id/txt_meditation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:gravity="center"
                android:text="@string/meditation_ready"
                android:textColor="@color/grey"
                android:textSize="27sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Image principale -->
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="254dp"
                android:layout_height="233dp"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/scroll_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_meditation"
                app:srcCompat="@drawable/logo_final_nb" />

            <!-- Player bar -->
            <LinearLayout
                android:id="@+id/playerBar"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_corners_exoplayer"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="12dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4">

                <androidx.media3.ui.PlayerView
                    android:id="@+id/player_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:controller_layout_id="@layout/exo_playonly_controller"
                    app:show_buffering="when_playing"
                    app:show_timeout="0"
                    app:surface_type="none"
                    app:use_controller="true" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonOkMeditation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:padding="10dp"
                android:text="@string/ok_button"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:layout_constraintVertical_bias="1.0" />

            <!-- ScrollView contenant l'EditText et le bouton OK -->
            <ScrollView
                android:id="@+id/scroll_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:paddingTop="120dp"
                app:layout_constraintTop_toBottomOf="@id/txt_meditation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/nameAffirm"
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:background="@drawable/plaintext_white"
                        android:backgroundTint="@color/yellow"
                        android:hint="@string/name_your_creation"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textAlignment="center"
                        android:textColor="@color/grey"
                        android:textSize="20sp"
                        android:textStyle="italic" />
                </LinearLayout>
            </ScrollView>

            <!-- NOTE : pas d'overlay ici pour ne pas hériter du padding -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- OVERLAY PLEIN ÉCRAN, SANS PADDING -->
    <FrameLayout
        android:id="@+id/circularProgressContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:elevation="40dp"
        android:visibility="gone"
        android:fitsSystemWindows="false">

        <LinearLayout
            android:id="@+id/overlayContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:translationY="110dp">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/circularProgressIndicator"
                android:layout_width="240dp"
                android:layout_height="244dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                app:indicatorColor="@color/green"
                app:indicatorSize="300dp"
                app:strokeWidth="20dp"
                app:trackColor="#40FFFFFF" />

            <TextView
                android:id="@+id/circularProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/progress_indicator_percentage"
                android:textColor="@color/green"
                android:textSize="50sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <!-- Menu de navigation latéral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
