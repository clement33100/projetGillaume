<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/activity_background"
    tools:context=".MeditationPlay"
    android:padding="16dp"
    android:clipToPadding="false">

    <!-- Contenu principal de l'activité -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:clipToPadding="false">

        <ImageButton
            android:id="@+id/imageButtonPause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="#EFEFEF"
            android:src="@drawable/imgpause"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            tools:srcCompat="@drawable/imgunpause" />

        <ImageButton
            android:id="@+id/btn_burger"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@null"
            android:contentDescription="@string/menu"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_3_pointssvg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Texte principal -->
        <TextView
            android:id="@+id/txt_meditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:text="C'EST PRÊT !"
            android:textColor="@color/grey"
            android:textSize="27sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Image principale -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="254dp"
            android:layout_height="233dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_meditation"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/logo_final_nb" />

        <!-- Layout principal contenant la ProgressBar -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="317dp"
            android:layout_height="56dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="192dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- ProgressBar linéaire existante -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scaleY="2"
                android:layout_margin="16dp"
                android:indeterminateOnly="false"
                android:max="100"
                android:progress="0"
                android:fitsSystemWindows="true"
                android:progressBackgroundTint="@color/light_green"
                android:progressTint="@color/green" />
        </LinearLayout>

        <!-- ScrollView contenant l'EditText et le bouton OK -->
        <ScrollView
            android:id="@+id/scroll_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="450dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_meditation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- EditText pour le nom de l'affirmation -->
                <EditText
                    android:id="@+id/nameAffirm"
                    android:layout_width="316dp"
                    android:layout_height="74dp"
                    android:background="@drawable/plaintext_white"
                    android:backgroundTint="@color/yellow"
                    android:ems="10"
                    android:hint="Donne un Nom à ta Création"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <!-- Bouton OK -->
                <Button
                    android:id="@+id/buttonOkMeditation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:text="ok"
                    android:textSize="19sp" />
            </LinearLayout>
        </ScrollView>

        <!-- Overlay pour le téléchargement avec indicateur circulaire -->
        <FrameLayout
            android:id="@+id/circularProgressContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/circularProgressIndicator"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    app:indicatorColor="@color/green"
                    app:indicatorSize="300dp"
                    app:strokeWidth="20dp"
                    app:trackColor="#40FFFFFF" />

                <TextView
                    android:id="@+id/circularProgressText"
                    android:layout_width="131dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="-190dp"
                    android:contentDescription="Progression de l'audio : 0 pour cent"
                    android:text="0%"
                    android:textColor="@color/green"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menu de navigation latéral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>