<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_background"
        tools:context=".Etape2Voix">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="CHOISIS LA VOIX \n QUE TU PRÉFÈRES"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textSize="27sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_voix_femme"
            android:layout_width="212dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:text="Voix de Femme"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ScrollView
            android:id="@+id/scrollViewFemmeVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_voix_homme"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/btn_voix_femme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/voixFemme1"
                        android:layout_width="132dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/yellow"
                        android:padding="10dp"
                        android:text="Nicole"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <ImageButton
                        android:id="@+id/listenFemme1"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="listen femme"
                        app:srcCompat="@drawable/listenblackmoyen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/voixFemme2"
                        android:layout_width="132dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="0dp"
                        android:backgroundTint="@color/yellow"
                        android:padding="10dp"
                        android:text="Dorothy"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <ImageButton
                        android:id="@+id/listenFemme2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="listen femme"
                        app:srcCompat="@drawable/listenblackmoyen" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_voix_homme"
            android:layout_width="212dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:text="Voix d'Homme"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollViewFemmeVoice" />

        <ScrollView
            android:id="@+id/scrollViewHommeVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_voix_homme"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/btn_voix_homme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/voixHomme1"
                        android:layout_width="132dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/yellow"
                        android:padding="10dp"
                        android:text="orc"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <ImageButton
                        android:id="@+id/listenHomme1"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="listen homme"
                        app:srcCompat="@drawable/listenblackmoyen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/voixHomme2"
                        android:layout_width="132dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="0dp"
                        android:backgroundTint="@color/yellow"
                        android:padding="10dp"
                        android:text="Drew"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <ImageButton
                        android:id="@+id/listenHomme2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"

                        android:background="@android:color/transparent"
                        android:contentDescription="listen homme"
                        app:srcCompat="@drawable/listenblackmoyen" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/textViewStep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Ton choix : clique sur la voix que tu veux"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollViewHommeVoice" />

        <Button
            android:id="@+id/btn_ok_step2"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:text="ok"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewStep2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>